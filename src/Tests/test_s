int
quickSort(float[] arr, int left, int right)
{
    int i;
    int j;
    float tmp;
    float pivot;

    i = left;
    j = right;
    pivot = arr[(left + right) / 2];

    while(i <= j)
    {
        while(arr[i] < pivot)
        {
            i = i + 1;
        }
        while(arr[j] > pivot)
        {
            j = j - 1;
        }
        if(i <= j)
        {
            tmp = arr[i];
            arr[i] = arr[j];
            arr[j] = tmp;
            i = i + 1;
            j = j - 1;
        }
    }

    if(left < j)
    {
        quickSort(arr, left, j);
    }
    if(i < right)
    {
        quickSort(arr, i, right);
    }
}

int
main()
{
    float[10] arr;
    int i;
    i = 0;
    print("Enter 10 Floats\n");
    while(i < 10)
    {
        read(arr[i]);
        i = i + 1;
    }

    quickSort(arr, 0, 9);

    print("Sorted Numbers\n");
    i = 0;
    while(i < 10)
    {
        print(arr[i], "\n");
        i = i + 1;
    }
}
